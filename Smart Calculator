# Smart Calculator - KGSP Portfolio Project

def calculator():
    print("\nğŸ§® SMART CALCULATOR")
    print("==================")
    
    try:
        num1 = float(input("Enter first number: "))
        operator = input("Enter operator (+, -, *, /): ")
        num2 = float(input("Enter second number: "))
        
        if operator == "+":
            result = num1 + num2
        elif operator == "-":
            result = num1 - num2
        elif operator == "*":
            result = num1 * num2
        elif operator == "/":
            if num2 == 0:
                print("âŒ Error: Cannot divide by zero!")
                return
            result = num1 / num2
        else:
            print("âŒ Invalid operator!")
            return
            
        print(f"ğŸ¯ Result: {num1} {operator} {num2} = {result}")
        
    except ValueError:
        print("âŒ Please enter valid numbers!")

# Run calculator
calculator()
